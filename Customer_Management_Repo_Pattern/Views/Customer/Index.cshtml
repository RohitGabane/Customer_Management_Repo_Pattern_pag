    }

    th, td {
        border: 1px solid #DDDDDD;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #F2F2F2;
    }

    .btn-info {
        display: inline-block;
        padding: 10px 15px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        background-color: #5BC0DE;
        color: #fff;
        border-radius: 5px;
        margin-top: 10px;
    }

        .btn-info:hover {
            background-color: #31B0D5;
            color: #fff;
        }
</style>
<h2>@ViewData["Title"]</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-info mx-3"><i class="bi bi-pencil-square"></i>Edit</a> |
                    <a asp-action="Delete" asp-route-id="@customer.CustomerId" onclick="confirmDelete()" class="btn btn-danger mx-3"><i class="bi bi-trash3-fill"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</div>
